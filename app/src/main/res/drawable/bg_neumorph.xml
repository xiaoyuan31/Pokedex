<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Light shadow (top-left) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neo_shadow_light" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Dark shadow (bottom-right) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neo_shadow_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main surface -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neo_background" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
